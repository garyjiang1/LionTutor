<%= form_with(model: tutor) do |form| %>
  <% if tutor.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(tutor.errors.count, "error") %> prohibited this tutor from being saved:</h2>

      <ul>
        <% tutor.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.text_field :first_name, class:"form-control", placeholder:"First Name" %>
  </div>
  <br>

  <div class="field form-group">
    <%= form.text_field :last_name, class:"form-control",  placeholder:"Last Name"  %>
  </div>
  <br>

  <div class="field form-group">
    <%= form.text_field :email, class:"form-control",  placeholder:"Email (email should same as your logged in email)"  %>
  </div>
  <br>

  <div class="field form-group">
    <%= form.text_field :phone, class:"form-control", placeholder:"Phone Number"  %>
  </div>
  <br>

  <div class="field form-group">
    <%= form.text_field :bio, class:"form-control",  placeholder:"Tell us about yourself"  %>
  </div>
  <br>
  <div>
    <%= form.submit class:"btn btn-secondary" %>
  </div>
<% end %>
