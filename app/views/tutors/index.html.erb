<p style="color: green"><%= notice %></p>

<h1><FONT COLOR= "#012169"> Tutors List </FONT COLOR= "#012169"></h1>

<table class="table table-striped table-bordered table-hover" style="background-color:#D3D3D3">

<thead class="thead-dark">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Bio</th>
  </tr>
</thead>

<% @tutors.each do |tutor| %>
  <tr>
    <td>
        <%= link_to tutor.first_name + ' ' + tutor.last_name, tutor %>
    </td>
    <td><%= tutor.email %></td>
    <td><%= tutor.phone %></td>
    <td><%= tutor.bio %></td>
  </tr>
<% end %>
</table>
<br>
<%= link_to 'Become a Tutor', new_tutor_path, class:"btn btn-secondary" %>
